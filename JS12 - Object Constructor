// Object Constructor

// Object Literal
const producto01 = {
    nombre: 'Monitor de 20 pulgadas',
    precio: 300,
    disponible: true,
}

// Object Constructor
function producto(nombre, precio) {     // Hago una función que me facilite hacer objetos
    this.nombre = nombre;               // THIS mantiene la variable dentro de su objeto
    this.precio = precio;
    this.disponible = true;
}

const producto02 = new producto('Monitor de 24 pulgadas', 500);
console.log(producto02);

const producto03 = new producto('Televisión de 50 pulgadas', 24000);
console.log(producto03);
